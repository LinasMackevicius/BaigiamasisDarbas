@page
@model projektas.Pages.Notes.GeneralNotesModel
@{
    ViewData["Title"] = "Notes";
}

<!DOCTYPE html>
<html>
<head>
    <title>Notes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>Notes</h2>

        <!-- Accordion for displaying notes -->
        <div class="accordion" id="notesAccordion">
            @foreach (var note in Model.Notes)
            {
                string noteId = $"note-{Model.Notes.IndexOf(note)}";
                <!-- Unique ID for each note -->

                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading-@noteId">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@noteId" aria-expanded="false" aria-controls="collapse-@noteId">
                            <strong>@note.Title</strong>
                        </button>
                    </h2>

                    <div id="collapse-@noteId" class="accordion-collapse collapse" aria-labelledby="heading-@noteId" data-bs-parent="#notesAccordion">
                        <div class="accordion-body">
                            <!-- Display content or editable area -->
                            <form method="post" action="/Notes/GeneralNotes">
                                <input type="hidden" name="index" value="@Model.Notes.IndexOf(note)" />
                                <textarea name="content" class="form-control" rows="4" readonly="@(!note.CanEdit)">@note.Content</textarea>

                                <!-- Pencil button for editing -->
                                <button type="button" class="btn btn-warning mt-2" onclick="toggleEdit('@noteId')">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button type="submit" class="btn btn-success mt-2" style="display:none" id="save-@noteId">
                                    <i class="bi bi-save"></i> Save
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Function to toggle edit mode
        function toggleEdit(noteId) {
            const textarea = document.querySelector(`#collapse-${noteId} textarea`);
            const editButton = document.querySelector(`#collapse-${noteId} button.btn-warning`);
            const saveButton = document.querySelector(`#collapse-${noteId} button.btn-success`);

            // Toggle read-only mode and button visibility
            textarea.readOnly = !textarea.readOnly;
            editButton.style.display = textarea.readOnly ? 'inline-block' : 'none';
            saveButton.style.display = textarea.readOnly ? 'none' : 'inline-block';
        }
    </script>
</body>
</html>
